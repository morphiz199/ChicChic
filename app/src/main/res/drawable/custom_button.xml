<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#F488F0"
                android:endColor="#4B04E8"
                android:angle="270"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#4B04E8"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>

    </item>

</selector>